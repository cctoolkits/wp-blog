{
    "name": "cctoolkits/wp-blog",
    "description": "CC Toolkits WordPress site",
    "repositories":[
        {
			"type":"composer",
			"url":"http://wpackagist.org"
        }
    ],
	
	"config": {
		"vendor-dir": "www/wp-content/vendor"
	},
    
	"require": {
        "johnpbloch/wordpress": ">=3.9",
        "wpackagist-plugin/advanced-custom-fields": "4.3.8",
        "wpackagist-plugin/acf-field-date-time-picker": "2.0.14",
		"wpackagist-plugin/akismet": "3.0.1",
		"wpackagist-plugin/backwpup": "3.1.2",
		"wpackagist-plugin/custom-sidebars": "2.0.7",
		"wpackagist-plugin/googleanalytics": "1.0.5",
		"wpackagist-plugin/hotfix": "1.0",
		"wpackagist-plugin/jetpack": "3.0.2",
		"wpackagist-plugin/polylang": "1.5",
		"wpackagist-plugin/updraftplus": "1.9.13",
		"wpackagist-plugin/wp-maintenance": "1.8",
		"wpackagist-plugin/wp-migrate-db": "0.5"
    },

	"extra": {
		"wp-content": "www/wp-content",
		"wordpress-install-dir": "www/wp",
		"installer-paths": {
			"www/wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
		}
	}
}
